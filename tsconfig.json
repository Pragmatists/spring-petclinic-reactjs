{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "allowJs": true,
    "outDir": "public/dist",
    "sourceMap": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser",
    "tests"
  ],
  "include": [
    "src"
  ]
}
